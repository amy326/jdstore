<h2> Categories List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增分类", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th class="text-center">Category name</th>
      <th width="100" colspan="3" class="text-center"> Options</th>
    </tr>
  </thead>



  <tbody>
  	<% @categories.each do |category| %>
    	<tr>
         <td><%= category.id %></td>
         <td class="text-center"><%= category.name %></td>
      	<td><%= link_to '查看', category %></td>
      	<td><%= link_to '编辑', edit_category_path(category) %></td>
      	<td><%= link_to '删除', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    	</tr>
  	<% end %>
  </tbody>



</table>

<div class="btn btn-primary btn-sm">
   <%= link_to 'Back', admin_products_path %>
</div>
