<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>


  <!-- 以下是 下拉选单的另一种表达写法
  <div class="group">
     <%= f.association :category %>
  </div> -->

    <div class="group">
      <%= select_tag( :category_id, options_for_select(@categories), :prompt => '类型')%>
    </div>


  <div>
     <%= f.input :image, as: :file%>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
