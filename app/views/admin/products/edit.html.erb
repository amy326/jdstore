<h2> Edit Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
   <div class="group">
      <%= f.input :title %>
   </div>

   <div class="group">
      <%= f.input :description %>
   </div>

   <div class="group">
      <%= f.input :quantity %>
   </div>

   <div class="group">
      <%= f.input :price %>
   </div>

   <% if @product.image.present? %>
      <span>目前商品图</span><br>
      <%= image_tag(@product.image.thumb.url)%>
   <% end %>

   <div class="group">
      <%= f.input :image, as: :file %>
   </div>

   <div class="group">
       <%= f.association :category %>  <!--simple_form_for格式 -->
   </div>

   <!--以下是 下拉选单的另一种表达写法
     <div class="group">
        <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select one')%>
     </div> -->


<%= f.submit "Submit", data: { disable_with: "Submitting..."} %>
<% end %>
